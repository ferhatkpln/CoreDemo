@using EntityLayer.Concrete
@model List<Blog>

@foreach (var b in Model)
{
    <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
            <a href="/Blog/BlogReadAll/@b.BlogID">
                <img src="~/images/@b.BlogImage" class="card-img-top img-fluid" alt="">
            </a>
        </div>
        <div class="col-md-7 blog-grid-right">

            <h5>
                <a href="/Blog/BlogReadAll/@b.BlogID">@b.BlogTitle </a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i> @(((DateTime)b.BlogCreateDate).ToString("dd/MM/yyyy"))
                </span>
            </div>
        </div>
    </div>
}