@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Paylaşılan Gönderiler</h3>
        <div class="row inner-sec">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                <div class="row mb-4">

                    @foreach (var b in Model)
                    {
                        <div class="col-md-6 card">
                            <a href="single.html">
                                <img src="~/@b.BlogImage" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @b.BlogCreateDate.ToString($"{0:dd/MM/yyyy}")
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 0
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @b.CategoryID
                                        </a>
                                    </li>
                                </ul>
                                <h5 class="card-title ">
                                    <a href="single.html">@b.BlogTitle</a>
                                </h5>
                                <p class="card-text mb-3">@b.BlogContent</p>
                                <a href="single.html" class="btn btn-primary read-m">Devamını Oku</a>
                            </div>
                        </div>
                    }
                </div>
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-left mt-4">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Önceki</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">Sonraki</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <!--//left-->
            <!--right-->
            @await Html.PartialAsync("_Aside")
            <!--//right-->
        </div>
    </div>
</section>

